@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subdivision Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
    <div class="row">
        <!-- Left: Welcome Card -->
        <div class="col-12 col-md-6">
            <div class="card  p-4 bg-light rounded text-center">
                <div class="card-body">
                    <h3 class="card-title text-primary fw-bold">Welcome to HomeHive</h3>
                    <p class="card-text text-muted">
                        Discover the perfect place to call home. HomeHive offers modern, comfortable, and secure living spaces designed for families and individuals alike. Experience the best of community living with top-notch amenities, green spaces, and a welcoming neighborhood.
                    </p>
                </div>
            </div>
        </div>

        <!-- Right: Three Cards (Responsive) -->
        <div class="col-12 col-md-6 d-flex flex-wrap justify-content-center gap-3">
            <div class="card text-center shadow-sm p-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Modern Amenities</h5>
                    <p class="card-text">Enjoy high-end facilities including parks, pools, and a clubhouse.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>

            <div class="card text-center shadow-sm p-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Safe & Secure</h5>
                    <p class="card-text">24/7 security and a gated community for peace of mind.</p>
                    <a href="#" class="btn btn-primary">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
