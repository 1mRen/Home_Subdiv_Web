@model Home_Sbdv.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - HomeHive</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-6">
                <!-- Card for the login form -->
                <div class="card p-4 bg-light rounded text-start">
                    <div class="card-body">
                        <!-- Title -->
                        <h2 class="card-title text-primary text-center fw-bold">Welcome Back!</h2>

                        <!-- Form Start -->
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <!-- Username Field -->
                            <div class="form-group mb-3">
                                <label asp-for="UserNameorEmail" class="control-label text-dark text-start"></label>
                                <input asp-for="UserNameorEmail" class="form-control" placeholder="Enter username or email" />
                                <span asp-validation-for="UserNameorEmail" class="text-danger"></span>
                            </div>

                            <!-- Password Field -->
                            <div class="form-group mb-3">
                                <label asp-for="Password" class="control-label text-dark text-start"></label>
                                <input asp-for="Password" class="form-control" placeholder="Enter password" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Forgot Password Link -->
                            <div class="form-group text-right mb-3">
                                <a href="#" class="text-dark">Forgot password?</a>
                            </div>

                            <!-- Submit Button -->
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary w-100" />
                            </div>
                        </form>

                        <!-- Registration Link -->
                        <div class="text-center mt-3">
                            Don't have an account? <a asp-action="Registration" class="text-info">Become a member!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
