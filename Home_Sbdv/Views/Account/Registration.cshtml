@model Home_Sbdv.Models.RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration - HomeHive</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-6">
                <!-- Card for the registration form -->
                <div class="card p-4 bg-light rounded text-start">
                    <div class="card-body">
                        <!-- Title -->
                        <h3 class="card-title text-primary fw-bold">Registration</h3>

                        <!-- Validation Message -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (ViewBag.Message != null)
                        {
                            <div class="form-group" style="color: green;">
                                @ViewBag.Message
                            </div>
                        }

                        <!-- Form Start -->
                        <form asp-action="Registration">
                            <!-- First Name -->
                            <div class="form-group mb-3">
                                <label asp-for="FirstName" class="control-label text-dark text-start"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <!-- Last Name -->
                            <div class="form-group mb-3">
                                <label asp-for="LastName" class="control-label text-dark text-start"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="form-group mb-3">
                                <label asp-for="Email" class="control-label text-dark text-start"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <!-- Contact Number -->
                            <div class="form-group mb-3">
                                <label asp-for="ContactNumber" class="control-label text-dark text-start"></label>
                                <input asp-for="ContactNumber" class="form-control" />
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>

                            <!-- Address -->
                            <div class="form-group mb-3">
                                <label for="Address" class="text-dark">Address</label>
                                <input type="text" asp-for="Address" class="form-control" required />
                            </div>

                            <!-- Gender -->
                            <div class="form-group mb-3">
                                <label for="Gender" class="text-dark">Gender</label>
                                <select asp-for="Gender" class="form-control" required>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                    <option value="others">Others</option>
                                </select>
                            </div>

                            <!-- Ownership Status -->
                            <div class="form-group mb-3">
                                <label for="OwnershipStatus" class="text-dark">Do you own or rent the lot?</label>
                                <select asp-for="OwnershipStatus" class="form-control" required>
                                    <option value="owned">Owned</option>
                                    <option value="rented">Rented</option>
                                </select>
                            </div>

                            <!-- Username -->
                            <div class="form-group mb-3">
                                <label asp-for="Username" class="control-label text-dark text-start"></label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <!-- Password -->
                            <div class="form-group mb-3">
                                <label asp-for="Password" class="control-label text-dark text-start"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!-- Submit Button -->
                            <div class="form-group">
                                <input type="submit" value="Register" class="btn btn-primary w-100" />
                            </div>
                        </form>

                        <!-- Login Link -->
                        <div class="text-center mt-3">
                            Already have an account? <a asp-action="Login" class="text-info">Go To Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
