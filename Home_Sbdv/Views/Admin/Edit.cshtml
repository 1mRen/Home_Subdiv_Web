@model Home_Sbdv.Entities.Users

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="ContactNumber" class="form-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" class="form-select">
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-select">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="others">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OwnershipStatus" class="form-label"></label>
                <select asp-for="OwnershipStatus" class="form-select">
                    <option value="owned">Own</option>
                    <option value="rented">Rent</option>
                </select>
                <span asp-validation-for="OwnershipStatus" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Save Changes</button>
            <a asp-action="ListUsers" class="btn btn-secondary">Cancel</a>
        </form>

    </div>
</div>
