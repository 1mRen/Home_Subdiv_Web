{
    "ConnectionStrings": {
        // Defines the database connection string
        // Uses LocalDB (a lightweight SQL Server instance) for development
        "Default": "Server=(localdb)\\MSSQLLocalDB;Database=HomeSubdivDB;Trusted_Connection=True;MultipleActiveResultSets=true"
    },

    "Logging": {
        "LogLevel": {
            // Sets the default logging level to "Information"
            "Default": "Information",

            // Configures logging level for ASP.NET Core-related messages
            // "Warning" means only warnings and higher-level messages will be logged
            "Microsoft.AspNetCore": "Warning"
        }
    },

    // Allows requests from any host (useful for development, but should be configured properly in production)
    "AllowedHosts": "*"
}
