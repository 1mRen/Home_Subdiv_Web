@{
    // Sets the page title for the Staff Dashboard view
    ViewData["Title"] = "Staff Dashboard";
}

<!-- Page heading -->
<h1>Staff Dashboard</h1>

<!-- Displays a welcome message with the logged-in staff member's username -->
<p>Welcome, @User.Identity.Name! You have staff privileges.</p>

<!-- Button to navigate to a secure page in the Account controller -->
<a asp-action="SecurePage" asp-controller="Account" class="btn btn-primary">Go to Secure Page</a>
