<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Sets the page title dynamically based on ViewData -->
    <title>@ViewData["Title"] - Home_Subdiv_Web</title>

    <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site-wide custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Additional styles for Home_Subdiv_Web -->
    <link rel="stylesheet" href="~/Home_Subdiv_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Navbar with responsive design -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand/logo that links to the home page -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home_Subdiv_Web</a>

                <!-- Button for collapsing the navbar on small screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar items -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Partial view for login/logout functionality -->
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <!-- Main content area where page-specific content is rendered -->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer section -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Home_Subdiv_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- jQuery library -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JavaScript bundle -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript for the site -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Allows additional scripts to be injected by specific views -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
