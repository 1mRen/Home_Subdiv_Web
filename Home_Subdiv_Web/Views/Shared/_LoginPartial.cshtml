<!-- Check if a user is logged in -->
@if (Context.User.Identity.Name != null)
{
    <!-- Logout form, submits a POST request to the Account controller's LogOut action -->
    <form asp-controller="Account" asp-action="LogOut" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <!-- Display a greeting message with the logged-in user's name -->
                Hello @Context.User.Identity.Name!
            </li>
            <li>
                <!-- Logout button styled as a link -->
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <!-- If no user is logged in, show Registration and Login links -->
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Registration">Registration</a>
        </li>
        <li>
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    </ul>
}
